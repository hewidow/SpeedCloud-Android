<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar">
        <item name="colorControlNormal">@color/icon_primary</item>
    </style>

    <style name="popup_window_bottom_top_anim">
        <item name="android:windowEnterAnimation">@anim/popup_window_bottom_top_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_window_bottom_top_exit_anim</item>
    </style>

    <style name="popup_window_top_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/popup_window_top_bottom_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_window_top_bottom_exit_anim</item>
    </style>

    <!--ButtonSheetDialog圆角-->
    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>